<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.Profile">

    <RelativeLayout
        android:id="@+id/RelativeLayout01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:translationY="-30dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button2"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:background="@drawable/roundstyle"

            android:backgroundTint="@color/mainPink"
            android:bottomLeftRadius="10dp"
            android:bottomRightRadius="10dp"

            android:gravity="center|clip_vertical"
            android:text="Пройти вкусотест"
            android:textColor="@color/simpleWhite"
            android:topLeftRadius="10dp"
            android:topRightRadius="10dp"
            android:translationX="0dp"
            android:translationY="-140dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button3"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:background="@drawable/roundstyle"


            android:backgroundTint="@color/mainPink"
            android:bottomLeftRadius="10dp"
            android:bottomRightRadius="10dp"
            android:layout_centerInParent="true"

            android:gravity="center|clip_vertical"
            android:shadowColor="@color/mainPink"
            android:text="Настройки"
            android:textColor="@color/simpleWhite"
            android:textColorHint="@color/mainPink"
            android:topLeftRadius="10dp"
            android:topRightRadius="10dp"
            android:translationX="0dp"
            android:translationY="-50dp"
            app:rippleColor="@color/mainPink"
            app:strokeColor="@color/mainPink" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button5"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"

            android:background="@drawable/roundstyle"
            android:backgroundTint="@color/mainPink"
            android:bottomLeftRadius="10dp"
            android:bottomRightRadius="10dp"

            android:gravity="center|clip_vertical"
            android:text="Помощь"
            android:textColor="@color/simpleWhite"
            android:topLeftRadius="10dp"
            android:topRightRadius="10dp"
            android:translationX="0dp"
            android:translationY="40dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button6"
            android:layout_width="310dp"
            android:layout_height="60dp"
            android:layout_centerInParent="true"
            android:background="@drawable/roundstyle"
            android:backgroundTint="@color/mainPink"
            android:bottomLeftRadius="10dp"
            android:bottomRightRadius="10dp"
            android:gravity="center|clip_vertical"
            android:text="О приложении"
            android:textColor="@color/simpleWhite"
            android:topLeftRadius="10dp"
            android:topRightRadius="10dp"
            android:translationX="0dp"
            android:translationY="130dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/button"
            android:layout_width="310dp"
            android:layout_height="60dp"

            android:layout_centerInParent="true"
            android:background="@drawable/roundstyle"
            android:backgroundTint="@color/mainPink"
            android:bottomLeftRadius="10dp"
            android:bottomRightRadius="10dp"
            android:gravity="center|clip_vertical"
            android:text="Список продуктов"
            android:textColor="@color/white"
            android:topLeftRadius="10dp"
            android:topRightRadius="10dp"
            android:translationX="0dp"
            android:translationY="-230dp" />

    </RelativeLayout>


</FrameLayout>